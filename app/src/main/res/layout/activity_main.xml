<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/write"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/textv"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/textv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/write"
        app:layout_constraintRight_toRightOf="@+id/write"
        app:layout_constraintTop_toBottomOf="@+id/write" />

    <EditText
        android:id="@+id/write2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/textv2"
        app:layout_constraintTop_toBottomOf="@id/textv"/>

    <TextView
        android:id="@+id/textv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/write2"
        app:layout_constraintRight_toRightOf="@+id/write2"
        app:layout_constraintTop_toBottomOf="@+id/write2" />
    <EditText
        android:id="@+id/write3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/textv3"
        app:layout_constraintTop_toBottomOf="@id/textv2"/>

    <TextView
        android:id="@+id/textv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/write3"
        app:layout_constraintRight_toRightOf="@+id/write3"
        app:layout_constraintTop_toBottomOf="@+id/write3" />
    <EditText
        android:id="@+id/write4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/textv4"
        app:layout_constraintTop_toBottomOf="@id/textv3"/>

    <TextView
        android:id="@+id/textv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/write4"
        app:layout_constraintRight_toRightOf="@+id/write4"
        app:layout_constraintTop_toBottomOf="@+id/write4" />
    <EditText
        android:id="@+id/write5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/textv5"
        app:layout_constraintTop_toBottomOf="@id/textv4"/>

    <TextView
        android:id="@+id/textv5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/write5"
        app:layout_constraintRight_toRightOf="@+id/write5"
        app:layout_constraintTop_toBottomOf="@+id/write5" />
    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ReLoad"
        app:layout_constraintLeft_toLeftOf="@+id/textv5"
        app:layout_constraintRight_toRightOf="@+id/textv5"
        app:layout_constraintTop_toBottomOf="@+id/textv5"/>


</androidx.constraintlayout.widget.ConstraintLayout>